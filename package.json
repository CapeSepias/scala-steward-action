{
  "name": "scala-steward-action",
  "description": "A Github Action to launch Scala Steward in your repository",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "all": "npm run build && npm run format-check && npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scala-steward-org/scala-steward-action.git"
  },
  "keywords": [
    "actions",
    "scala",
    "dependency-update",
    "scala-steward"
  ],
  "author": "alejandrohdezma",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^2.2.0",
    "@actions/tool-cache": "^1.5.5",
    "@types/node-fetch": "^2.5.7"
  },
  "devDependencies": {
    "@types/node": "^14.0.4",
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "@zeit/ncc": "^0.22.2",
    "jest": "^26.0.1",
    "jest-circus": "^26.0.1",
    "ts-jest": "^26.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-github": "^3.4.1",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-jsdoc": "^25.4.2",
    "prettier": "^2.0.5",
    "typescript": "^3.9.2"
  }
}
